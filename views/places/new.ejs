      <form action="/places/create" method="post" class="field" id="add-item">
        <label class="label">Search</label>
        <div class="control" id="searchBoxContainer">
          <input class="input" type="text" placeholder="Search a place" id="searchBox" name="searchString" autocomplete="off">
        </div> <br>
            <input class="input" type="hidden" name="entityId" id="entity-id">
            <input class="input" type="hidden" name="country" id="country-name">
            <input class="input" type="hidden" name="countryCode" id="country-code">
            <input type="hidden" name="center" id="center">
            <label class="label">Visited/Planned</label>  
            <div class="control select">
              <select name="visitedPlanned" id="visited-planned" onchange="toggleVisitedPlanned()">
                <option value="" id="disable-selection">Select one:</option>
                <option value="visited">Visited</option>
                <option value="planned">Planned</option>
              </select>
            </div>
            <div id="form-items"></div>
            </form>  
            <br>
            <div class="control">
              <input class="button" type="submit" value="Submit" form="add-item">
            </div>
    </div>
  </div>
